---
import { Markdown } from 'astro/components';
import BaseHead from '../components/BaseHead.astro';
import BlogHeader from '../components/BlogHeader.astro';
import BlogPost from '../components/BlogPost.astro';

const {content} = Astro.props;
const {title, description, date, author, permalink} = content;
---
<html lang={ content.lang || 'en' }>
  <head>
    <link rel="stylesheet" href={Astro.resolve('../styles/global.css')} >
    <link rel="stylesheet" href={Astro.resolve('../styles/inter.css')} >
    <BaseHead title={title} description={description} permalink={permalink} />
    <link rel="stylesheet" href={Astro.resolve('../styles/blog.css')} />
  </head>

  <body class="px-6 md:px-0">
    <!-- <BlogHeader /> -->
    <BlogPost title={title} author={author} date={date} />
    <div class="flex justify-center w-full">
      <article class="max-w-prose text-lg space-y-2">
          <slot />
        </article>
    </div>
      
  </body>
</html>

